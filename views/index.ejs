<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body>
    <div class="container col-11 mt-5">
        <h1>URL shortener</h1>

        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only">URL</label>
            <input required type="url" name="fullUrl" id="fullUrl" placeholder="URL" class="form-control col mr-2">
            <button type="submit" class="btn btn-primary">Go</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Customize your URL</th>
                    <th>Stats</th>
                </tr>
            </thead>

            <tbody>
                <% shortUrls.forEach(shortUrl=> { %>
                    <tr>
                        <td style="padding-right: 50px"> <a href="<%= shortUrl.fullUrl %>"></a>
                            <%= shortUrl.fullUrl %>
                                </a>
                        </td>
                        <td style="padding-right: 50px"> <a href="<%= shortUrl.shortUrl %>">
                                <%= shortUrl.shortUrl %>
                            </a> </td>

                        <td style="padding-right: 75px">
                            <a class="btn btn-outline-success" href="edit/<%= shortUrl.shortUrl %>">Customize</button>
                                </form>
                        </td>
                        <td>
                            <a class="btn btn-info" href="stats/<%= shortUrl.shortUrl %>">View</a>
                        </td>

                    </tr>
                    <% }) %>

            </tbody>
        </table>
    </div>
</body>

</html>